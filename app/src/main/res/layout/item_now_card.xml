<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="480dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_now_Temp"
            android:layout_marginBottom="8dp"
            android:textSize="64sp"
            android:layout_above="@id/item_now_sky"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/white"
            tools:text="37°" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_pm25"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            tools:text="晴天"
            android:textColor="@color/white"
            android:id="@+id/item_now_sky" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_pm25"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            tools:text="PM2.5"
            android:layout_alignParentBottom="true" />

    <TextView
            tools:text="郑州市"
            android:paddingTop="42dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="8dp"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:id="@+id/item_now_city" />

    <ImageView
            android:id="@+id/item_now_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            app:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:paddingTop="42dp" />

    <ImageView
        android:id="@+id/item_now_sky_icon"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_below="@id/item_now_add"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        tools:srcCompat="@drawable/ic_cloudy_night" />
</RelativeLayout>