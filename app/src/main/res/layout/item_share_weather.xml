<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="130dp">

    <TextView
            tools:text="10/23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_item_day"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/share_item_temp"
            app:layout_constraintEnd_toEndOf="@+id/share_item_temp"
            android:layout_marginTop="8dp" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_cloudy_night"
            android:id="@+id/share_item_skyIcon"
            app:layout_constraintTop_toBottomOf="@+id/share_item_day"
            app:layout_constraintStart_toStartOf="@+id/share_item_temp"
            app:layout_constraintEnd_toEndOf="@+id/share_item_temp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/share_item_temp"
            android:layout_marginBottom="8dp" />

    <TextView
            tools:text="30°/23°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_item_temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/share_item_air"
            android:layout_marginBottom="8dp" />

    <TextView
            tools:text="优"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_item_air"
            app:layout_constraintStart_toStartOf="@+id/share_item_temp"
            app:layout_constraintEnd_toEndOf="@+id/share_item_temp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>