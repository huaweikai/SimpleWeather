<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView

            android:layout_width="54dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_warn_dense_fog"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/item_alert_icon" />

    <TextView

            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_alert_level"
            tools:text="雷电蓝色预警"
            style="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintStart_toEndOf="@+id/item_alert_icon"
            app:layout_constraintTop_toTopOf="@+id/item_alert_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_alert_icon"
            android:layout_marginStart="8dp" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/item_alert_time"
            tools:text="发布在2022年"
            style="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toStartOf="@+id/item_alert_icon"
            app:layout_constraintTop_toBottomOf="@+id/item_alert_icon"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp" />

    <TextView
            android:id="@+id/item_alert_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_alert_time"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>